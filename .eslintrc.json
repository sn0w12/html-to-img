{
    "extends": ["next/core-web-vitals", "next/typescript"],
    "plugins": ["prettier"],
    "env": {
        "browser": true,
        "node": true,
        "worker": true
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "tabWidth": 4,
                "useTabs": false,
                "endOfLine": "auto"
            }
        ]
    }
}
